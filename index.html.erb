		<%# stylesheet_link_tag "style" %>

		<%# livereload_js if ENV["RACK_ENV"] != "production" %>


		<script>

		// Viewport Sizing

			$(document).ready(function(e) {
				showViewportSize();    
			});
			$(window).resize(function(e) {
				showViewportSize();
			});
			function showViewportSize() {
				var the_width = $(window).width();
				var the_height = $(window).height();

				$('#width').text(the_width);
				$('#height').text(the_height);
			}
		</script>

		<style>
			.window-size { 
				background: #FCFCFC;
				box-shadow: inset 0 0 4px 0 rgba(0,0,0,.08);
				color: #555;
				position: absolute;
				bottom: 0; 
				padding: 10px 20px;
				width: 100%;
				z-index: 10;
			}

			.window-size .width,
			.window-size .height { 
				float: left;
				font-size: 13px;
				text-align: center;
				text-transform: uppercase;
				width: 50%;
			}
		</style>

		<script>
			$(document).ready(function() {

